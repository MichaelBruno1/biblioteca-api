  "components": {
    "schemas": {
      "Status": {
        "required": [
          "version",
          "status",
          "data"
        ],
        "type": "object",
        "properties": {
          "version": {
            "type": "string",
            "description": "Versão da API",
            "example": "v1"
          },
          "status": {
            "type": "string",
            "description": "Status da API",
            "example": "OK"
          },
          "data": {
            "type": "string",
            "description": "Data da consulta",
            "example": "09/10/2021 12:00:00"
          }
        }
      },
      "Livro": {
        "required": [
          "titulo",
          "autor",
          "genero"
        ],
        "type": "object",
        "properties": {
          "titulo": {
            "type": "string",
            "description": "Título do livro",
            "example": "O Hobbit"
          },
          "autor": {
            "type": "string",
            "description": "Nome do autor",
            "example": "J. R. R. Tolkien"
          },
          "genero": {
            "type": "string",
            "description": "Gênero do livro",
            "example": "Fantasia"
          }
        }
      },
      "LivroResponse": {
        "required": [
          "id",
          "titulo",
          "autor",
          "genero",
          "alugado"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "Id do livro",
            "example": 1
          },
          "titulo": {
            "type": "string",
            "description": "Título do livro",
            "example": "O Hobbit"
          },
          "autor": {
            "type": "string",
            "description": "Nome do autor",
            "example": "J. R. R. Tolkien"
          },
          "genero": {
            "type": "string",
            "description": "Gênero do livro",
            "example": "Fantasia"
          },
          "alugado": {
            "type": "boolean",
            "description": "Status de disponibilidade",
            "example": false
          }
        }
      },
      "LivroAlugado": {
        "required": [
          "id",
          "titulo",
          "autor",
          "genero",
          "alugado"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "Id do livro",
            "example": 1
          },
          "titulo": {
            "type": "string",
            "description": "Título do livro",
            "example": "O Hobbit"
          },
          "autor": {
            "type": "string",
            "description": "Nome do autor",
            "example": "J. R. R. Tolkien"
          },
          "genero": {
            "type": "string",
            "description": "Gênero do livro",
            "example": "Fantasia"
          },
          "alugado": {
            "type": "boolean",
            "description": "Status de disponibilidade",
            "example": true
          }
        }
      },
      "Usuario": {
        "required": [
          "usuario",
          "email",
          "senha"
        ],
        "type": "object",
        "properties": {
          "usuario": {
            "type": "string",
            "description": "Nome do usuario",
            "example": "Pedro"
          },
          "email": {
            "type": "string",
            "description": "Email do usuario",
            "example": "pedro@email.com"
          },
          "senha": {
            "type": "string",
            "description": "Senha do usuario",
            "example": "pwd123"
          }
        }
      },
      "UsuarioResponse": {
        "required": [
          "id",
          "usuario",
          "email",
          "senha"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "ID do usuario",
            "example": 1
          },
          "usuario": {
            "type": "string",
            "description": "Nome do usuario",
            "example": "Pedro"
          },
          "email": {
            "type": "string",
            "description": "Email do usuario",
            "example": "pedro@email.com"
          }
        }
      },
      "ErrorModelNotFound": {
        "required": [
          "error",
          "status"
        ],
        "type": "object",
        "description": "Mensagem de erro",
        "properties": {
          "erro": {
            "type": "string",
            "description": "Mensagem de erro.",
            "example": "Objeto não encontrado"
          },
          "status": {
            "type": "string",
            "description": "Mensagem de erro.",
            "example": "NOT_FOUND"
          }
        }
      },
      "ErrorModelBadRequest": {
        "required": [
          "error",
          "status"
        ],
        "type": "object",
        "description": "Mensagem de erro",
        "properties": {
          "erro": {
            "type": "string",
            "description": "Mensagem de erro.",
            "example": "Objeto Inválido"
          },
          "status": {
            "type": "string",
            "description": "Mensagem de erro.",
            "example": "BAD_REQUEST"
          }
        }
      }
    }
  }
